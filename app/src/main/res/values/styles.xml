    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashActivityTheme" parent="ResplashTheme.Primary.Base.Light">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="PreferenceThemeLight" parent="ResplashTheme.Primary.Base.Light">
        <item name="colorAccent">@color/colorText_light</item>
    </style>

    <style name="PreferenceThemeDark" parent="ResplashTheme.Primary.Base.Dark">
