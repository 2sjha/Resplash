        <item name="android:windowBackground">@drawable/dialog_background_light</item>
        <item name="android:textColorPrimary">@color/colorText_light</item>
        <item name="android:textColorAlertDialogListItem">@color/colorText_light</item>
        <item name="colorAccent">@color/colorText_light</item>
        <item name="colorControlNormal">@color/colorTextSecondary_light</item>
